<div class="quiz_question">

    <%= form_with(model: quiz_question, local: true) do |form| %>
    <% if quiz_question.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(quiz_question.errors.count, "error") %>
          prohibited this quiz_question from being saved:</h2>

        <ul>
          <% quiz_question.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <div class="field">
        <%= form.text_field :name, class: "form-control col-md-8", placeholder: "Question Name", autofocus: true %>
      </div>
      <div>

        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>

  </div>
