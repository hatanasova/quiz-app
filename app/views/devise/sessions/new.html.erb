<div class="signup">
  <div class='container'>
    <h2 class="text-center">Login Form</h2>

    <div class='col-md-12'>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "col-md-8", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: "col-md-8", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-light btn-md" %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>

    </div>

  </div>
</div>
