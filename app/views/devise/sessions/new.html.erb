<div class="signup">
  <div class='container'>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2 class="text-center">Login Form</h2>

    <div class='col-md-12'>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: "col-md-8", autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: "col-md-8", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log In", class: "btn btn-light btn-md" %>
          <%= link_to "Sign Up?", new_registration_path(resource_name), class: "btn btn-outline-light btn-md" %>
        </div>
        <br>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-pass" %>
      <% end %>

    </div>

  </div>
</div>
