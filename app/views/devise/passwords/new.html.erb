<div class="reset-pass">
  <div class="container">
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2 class="text-center">Forgot your password?</h2>

    <div class="col-md-12">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <div class="form-group">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-8" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Send Password Reset Email", class: "btn btn-light btn-md" %>

          <%= link_to "Log In?", new_session_path(resource_name), class: "btn btn-outline-light btn-md" %>
          <%= link_to "Sign Up?", new_registration_path(resource_name), class: "btn btn-outline-light btn-md" %>
        </div>
      <% end %>
    </div>

    <!-- <%= render "devise/shared/links" %> -->
  </div>
</div>
