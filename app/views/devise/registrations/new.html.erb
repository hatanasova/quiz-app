<div class="signup">
  <div class='container'>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2 class="text-center">Registration Form</h2>

    <div class='col-md-12'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-group">
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "col-md-8", autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, class: "col-md-8", autocomplete: "new-password" %>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: "col-md-8", autocomplete: "new-password" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-light btn-md" %>
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
  <% end %>
</div>
